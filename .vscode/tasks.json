{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: nvcc build active file",
            "command": "/usr/local/cuda/bin/nvcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-arch=sm_86",
                "-O3",
                "--use_fast_math"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}